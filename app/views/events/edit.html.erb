<%= render "layouts/navbar" %>
<div class="new_event_main_container">
  <div class="new_event_form_container">
    <div class="row">
      <div class="col-xs-4 col-xs-offset-4">
       <h1>Edit Event</h1>
    <%= bootstrap_form_for(@event, url: user_event_path(@current_user.id, @event)) do |f| %>
              <div>
              Event Title: <%= f.text_field :title %>
              </div>
              <div>
               Description: <%= f.text_field :description %>
              </div>
              <div>
               Start Date:  <%= f.date_field :start_date %>
              </div>
              <div>
                End Date: <%= f.date_field :end_date %>
              </div>
              <div>
                Time Begin: <%= f.time_field :start_time %>
              </div>
              <div>
                Time End: <%= f.time_field :end_time %>
              </div>
              <div>
                <%= f.submit %>
              </div>
              <div>
                <%= button_to "Delete", user_event_path(current_user.id, @event.id), method: :delete %>
              </div>
          <% end %>
      </div>
    </div>
  </div>
</div>



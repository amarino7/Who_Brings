<%= render "layouts/navbar" %>
<div class="row">
	<div class="col-xs-4 col-xs-offset-4">
		<div class="events__main_container">
			<h1>Events</h1>
			<%= link_to "Create a New Event", "/events/new" %>
			<ul>
				<% @events.each do |event| %>
				<li>
					<div>Title: <%=event.title%>
					</div>
					<div>Description: <%=event.description%>
					</div>
					<div>Start Date: <%=event.start_date.strftime("%m/%d/%Y")%>
					</div>
					<div>End Date: <%=event.end_date.strftime("%m/%d/%Y")%>
					</div>
					<div>Start Time: <%=event.start_time.strftime("%I:%M%p")%>
					</div>
					<div>End Time: <%=event.end_time.strftime("%I:%M%p")%>
					</div>
					<%= link_to "Edit Event", "/events/#{event.id}/edit" %> <br>
					<%= link_to "Create New Task List", "/events/#{event.id}/tasks/new" %> <br>
					<%= link_to "Current Task List", "/events/#{event.id}/tasks" %>
				</li>
				<% end %>
			</ul>
		</div>
	</div>
</div>

